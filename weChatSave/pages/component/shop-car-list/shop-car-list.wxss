/* pages/component/shop-car-list/shop-car-list.wxss */
@import "/pages/common/lib/common.wxss";
@import "/pages/common/font/iconfont.wxss";
.shop-car-list{
  border-top: 1px solid #ccc;
  padding: 30rpx 0;
  vertical-align: middle;

}
.inlineBlock{
  display: inline-block;
  vertical-align: middle;
}
.shop-car-list label{
  width: 50rpx;
  
}
checkbox-group{
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}
.shop-car-list label checkbox{
  width: 50rpx;
  height: 50rpx;
}
.commodity-img{
  width: 220rpx;
  height: 220rpx;
}
.text-right{
  width: calc(80% - 280rpx);
  font-size: 28rpx;
  box-sizing: border-box;
  padding-left: 10px;
}
.text-content{
  display: block;
  line-height: 50rpx;
  height: 100rpx;
  overflow: hidden;
  color: #000;
}
.text-type{
  color: #666;
  line-height: 60rpx;
}
.num-exit{
  line-height: 60rpx;
  vertical-align: middle;
  display: inline-block;
  border: 1px solid #ccc;
  border-radius: 4px;
  box-sizing: border-box;
  font-size: 0;
}
.num-exit .iconfont{
  display: inline-block;
  vertical-align: middle;
  font-size: 40rpx;
  text-align: center;
  width: 60rpx;
  height: 60rpx;

}
.num-exit input{
  display: inline-block;
  vertical-align: middle;
  width: 120rpx;
  border-left: 1px solid #ccc;
  border-right: 1px solid #ccc;
  height: 60rpx;
  line-height: 60rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  font-size: 28rpx;
}
.list-price{
  width: 20%;
  text-align: right;
  font-size: 28rpx;
}
.old-price{
  text-decoration:line-through;
  color: #999;
}
.now-price{
  color: #e39a13;
  margin-top: 15px;
}